<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_signup_toolbar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#f6d45b"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_signup_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29.3dp"
            android:layout_marginTop="36.7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="36.7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_signup_back"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_signup_id_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/const_signup_toolbar">

        <TextView
            android:id="@+id/txt_signup_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="아이디"
            android:textColor="#757474"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_signup_id"
            android:layout_width="225dp"
            android:layout_height="41dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_signin_custom"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_signup_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="비밀번호"
            android:textColor="#757474"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_signup_id" />

        <EditText
            android:id="@+id/edt_signup_pw"
            android:layout_width="225dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_signin_custom"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_signup_id" />

        <TextView
            android:id="@+id/txt_signup_pw_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:textColor="#757474"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_signup_pw"
            tools:text="비밀번호 확인" />

        <EditText
            android:id="@+id/edt_signup_pw_check"
            android:layout_width="225dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_signin_custom"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_signup_pw" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_signup_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/const_signup_id_pw">

        <TextView
            android:id="@+id/txt_signup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#757474"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="이름" />

        <EditText
            android:id="@+id/edt_signup_name"
            android:layout_width="165dp"
            android:layout_height="35dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/edt_signin_custom"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_signup_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#757474"
            android:text="성별"
            app:layout_constraintLeft_toRightOf="@id/edt_signup_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/ch_signup_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/txt_signup_gender"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/txt_signup_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23.3sp"
            android:textColor="#ff0000"
            app:layout_constraintLeft_toRightOf="@id/ch_signup_women"
            app:layout_constraintTop_toTopOf="parent"
            android:text="♀"
            />
        <CheckBox
            android:id="@+id/ch_signup_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/txt_signup_women"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/txt_signup_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23.3sp"
            android:textColor="#0000ff"
            android:text="♂"
            app:layout_constraintLeft_toRightOf="@id/ch_signup_men"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/txt_signup_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#757474"
            android:text="닉네임"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_signup_name"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/edt_signup_nick"
            android:layout_width="165dp"
            android:layout_height="35dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/edt_signin_custom"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_signup_name"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt_signup_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#757474"
            android:text="생년월일"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_signup_nick"
            android:layout_marginTop="30dp"/>
        <Spinner
            android:id="@+id/sp_signup_year"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:background="@drawable/edt_signin_custom"
            app:layout_constraintLeft_toRightOf="@id/txt_signup_birth"
            app:layout_constraintTop_toBottomOf="@id/edt_signup_nick"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="23dp"/>
        <Spinner
            android:id="@+id/sp_signup_month"
            android:layout_width="62dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toRightOf="@id/sp_signup_year"
            app:layout_constraintTop_toBottomOf="@id/edt_signup_nick"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edt_signin_custom"/>
        <Spinner
            android:id="@+id/sp_signup_day"
            android:layout_width="62dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toRightOf="@id/sp_signup_month"
            app:layout_constraintTop_toBottomOf="@id/edt_signup_nick"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edt_signin_custom"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btn_signup_signup"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:background="#f6d45b"
        android:textSize="20sp"
        android:textColor="#ffffff"
        tools:text="가입하기"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/const_signup_more"
        android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>